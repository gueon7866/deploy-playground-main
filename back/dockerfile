# Use official Node 22 image (alpine)
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy dependencies early to use Docker cache
COPY package.json package-lock.json ./

# Install only production dependencies
RUN npm install --production

# Copy application code
COPY . .

# Expose port
EXPOSE 3000

# Start app
CMD ["node", "index.js"]
